---
interface Props {
  title: string;
  description: string;
  date?: string;
  borderColor: string;
  icons?: string[];
  materialIcons?: string[];
}

const { title, description, date, borderColor, icons = [], materialIcons = [] } = Astro.props;

const colorClass = borderColor.replace("border-", "text-");
---

<div
  class={`group relative bg-white dark:bg-[#1A1A1A] p-8 rounded-2xl border border-gray-200 dark:border-white/5 hover:border-gray-300 dark:hover:border-white/20 transition-all duration-500 hover:shadow-2xl hover:-translate-y-1 overflow-hidden h-full flex flex-col`}
>
  <div
    class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 bg-gradient-to-br from-gray-50 to-transparent dark:from-white/5 dark:to-transparent pointer-events-none"
  >
  </div>

  <div class="relative z-10 flex-grow">
    {
      (icons.length > 0 || materialIcons.length > 0) && (
        <div
          class={`mb-6 flex items-center justify-start gap-3`}
        >
          {
            materialIcons.map((iconName) => (
              <div
                class={`rounded-xl bg-gray-50 dark:bg-white/5 border border-gray-100 dark:border-white/10 p-2 flex items-center justify-center group-hover:scale-110 transition-transform duration-300`}
                style="min-width:2.5rem; min-height:2.5rem;"
              >
                <span
                  class={`material-symbols-outlined ${colorClass} ${icons.length + materialIcons.length > 1 ? 'text-2xl' : 'text-3xl'}`}
                  style="font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24"
                >
                  {iconName}
                </span>
              </div>
            ))
          }
          {
            icons.map((iconPath) => (
              <div
                class={`rounded-xl bg-gray-50 dark:bg-white/5 border border-gray-100 dark:border-white/10 p-2 flex items-center justify-center group-hover:scale-110 transition-transform duration-300`}
                style="min-width:2.5rem; min-height:2.5rem;"
              >
                <svg
                  class={`${icons.length + materialIcons.length > 1 ? 'w-5 h-5' : 'w-6 h-6'} ${colorClass}`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d={iconPath}></path>
                </svg>
              </div>
            ))
          }
        </div>
      )
    }

    <h3
      class="text-xl font-bold mb-3 text-gray-900 dark:text-white group-hover:text-gray-700 dark:group-hover:text-white/90 transition-colors"
    >
      {title}
    </h3>

    {date && (
      <h4 class="text-sm text-pink-500 leading-relaxed mb-3">
        {date}
      </h4>
    )}

    <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
      {description}
    </p>
  </div>
</div>
