---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Card from "@/components/Card.astro";
import seniorEvents from '../data/seniorEvents.json';

---

<BaseLayout>
  <!-- Hero Section -->
  <div class="relative pt-24 pb-12 overflow-hidden">
    <div class="absolute inset-0 bg-white dark:bg-[#141414]"></div>
    <div
      class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-blue-900/5 via-white to-white dark:from-blue-900/20 dark:via-[#141414] dark:to-[#141414]"
    >
    </div>

    <div class="container mx-auto text-center px-4 relative z-10">
      <div class="max-w-6xl mx-auto">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl">
          <img
            src="/assets/hero_banner.png"
            alt="Hero Banner"
            class="w-full h-auto object-cover"
            loading="eager"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Secci√≥n de Informaci√≥n -->
  <main class="bg-white dark:bg-[#141414] py-16 relative">
    <div class="container mx-auto px-4">
      <h2
        class="text-3xl md:text-4xl font-bold text-center mb-16 text-gray-900 dark:text-white"
      >
        <span
          class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-400"
        >
          Upcoming Senior Events
        </span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {seniorEvents.map((event: { title: string; description: string; date: string; materialIcons: string[] }) => (
          <Card
            title={event.title}
            description={event.description}
            date={event.date}
            borderColor="border-pink-500"
            materialIcons={event.materialIcons}
          />
        ))}
      </div>
    </div>
  </main>

  <!-- Secci√≥n de Caracter√≠sticas -->
  <section
    class="bg-white dark:bg-[#141414] py-16 border-t border-gray-200 dark:border-white/5"
  >
    <div class="container mx-auto px-4">
      <h2
        class="text-3xl md:text-4xl font-bold text-center mb-16 text-gray-900 dark:text-white"
      >
        <span
          class="bg-clip-text text-transparent bg-gradient-to-r from-red-400 to-orange-400"
        >
          Upcoming Junior Events
        </span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <Card
          title="üîÑ Low Resource Consumption"
          description="With low resource consumption for extreme performance."
          borderColor="border-red-500"
          icons={["M13 10V3L4 14h7v7l9-11h-7z"]}
        />
        <Card
          title="üéÆ Compatibility"
          description="Support for AAA games and professional applications."
          borderColor="border-purple-500"
          icons={["M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"]}
        />
        <Card
          title="üõ°Ô∏è Security"
          description="With the latest security updates and malware protection."
          borderColor="border-green-500"
          icons={["M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"]}
        />
        <Card
          title="‚ú® Personalization"
          description="With popular tools to customize the appearance of Windows"
          borderColor="border-yellow-500"
          icons={["M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"]}
        />
      </div>
    </div>
  </section>

  <!-- Anuncio NTLite -->
  <div class="bg-white dark:bg-[#141414] pb-16 px-4">
    <div class="container mx-auto">
      <div
        class="relative rounded-2xl overflow-hidden border border-yellow-500/20 bg-yellow-50 dark:bg-yellow-500/5 p-8 md:p-12"
      >
        <div
          class="absolute inset-0 bg-gradient-to-r from-yellow-500/10 to-transparent pointer-events-none"
        >
        </div>

        <div class="relative z-10 max-w-4xl mx-auto text-center space-y-6">
          <div
            class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-yellow-500/10 text-yellow-500 mb-4"
          >
            <svg
              class="w-8 h-8"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              ></path></svg
            >
          </div>

          <p class="text-gray-700 dark:text-gray-300 leading-relaxed text-lg">
            <strong class="text-gray-900 dark:text-white"
              >Important Information:</strong
            > This ISO was optimized and created with
            <a
              href="https://www.ntlite.com/download/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-yellow-400 hover:text-yellow-300 font-bold underline decoration-2 underline-offset-2 transition-colors"
              >NTLite</a
            >, a professional tool that anyone can use.
          </p>

          <div class="grid md:grid-cols-2 gap-6 text-left mt-8">
            <div
              class="bg-white/50 dark:bg-black/20 p-6 rounded-xl border border-yellow-500/10 dark:border-white/5"
            >
              <h3
                class="text-gray-900 dark:text-white font-bold mb-2 flex items-center gap-2"
              >
                <span>üìö</span> Learning Resources
              </h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                Guides and tutorials available in the
                <a
                  href="https://www.ntlite.com/community/index.php?forums/guides.9/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-yellow-400 hover:text-yellow-300 underline"
                  >official NTLite forum</a
                >.
              </p>
            </div>

            <div
              class="bg-white/50 dark:bg-black/20 p-6 rounded-xl border border-yellow-500/10 dark:border-white/5"
            >
              <h3
                class="text-gray-900 dark:text-white font-bold mb-2 flex items-center gap-2"
              >
                <span>‚ö†Ô∏è</span> Recommendation
              </h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                I strongly recommend creating your own customized ISO for
                maximum security and control.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Secci√≥n Final CTA -->
  <section class="relative py-20 overflow-hidden bg-white dark:bg-[#141414]">
    <div
      class="absolute inset-0 bg-gradient-to-t from-blue-900/20 to-transparent pointer-events-none"
    >
    </div>

    <div class="container mx-auto text-center px-4 relative z-10">
      <h2
        class="text-4xl md:text-6xl font-bold mb-6 text-gray-900 dark:text-white"
      >
        <span
          class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-400"
        >
          Ready to start?
        </span>
      </h2>

      <a
        href="/descargas"
        class="inline-flex items-center justify-center px-8 py-4 text-base font-bold text-white bg-blue-600 hover:bg-blue-500 rounded-xl transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-blue-500/50"
      >
        Download Now
        <svg
          class="w-5 h-5 ml-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
          ></path>
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
